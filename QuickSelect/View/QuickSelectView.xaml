<Window x:Class="QuickSelect.View.QuickSelectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"        
        xmlns:local="clr-namespace:QuickSelect.View"
        xmlns:vm="clr-namespace:QuickSelect.ViewModel"
        x:Name="Win"
        mc:Ignorable="d"
        Title="Quick Select" Height="800" Width="400">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowClosedCommand}"
                                   CommandParameter="{Binding ElementName=Win}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding WindowClosedCommand}"
                                   CommandParameter="{Binding ElementName=Win}"
                                   x:Name="interactivityFix"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="9.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Family List" BorderThickness="1">
            <TreeView BorderThickness="0" x:Name="FolderView" ItemsSource="{Binding Items}">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Command="{Binding ClickCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}" Content="{Binding Name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </GroupBox>
        <WrapPanel Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1">
            <Button Command="{Binding ClickOkCommand}" Margin="5" Width="50" Content="OK" />
            <Button Command="{Binding ClickZoomInCommand}" Margin="5" Width="50" Content="ZoomIn" />
            <Button Command="{Binding ClickCancelCommand}" Margin="5" Width="50" Content="Cancel" />
        </WrapPanel>
    </Grid>
</Window>
