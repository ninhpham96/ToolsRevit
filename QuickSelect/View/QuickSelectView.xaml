<Window x:Class="QuickSelect.View.QuickSelectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:vm="clr-namespace:QuickSelect.ViewModel"
        x:Name="Win"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Manual"
        Title="Quick Select" Height="600" Width="300">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowClosedCommand}"
                                   CommandParameter="{Binding ElementName=Win}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding WindowClosedCommand}"
                                   CommandParameter="{Binding ElementName=Win}"
                                   x:Name="interactivityFix"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="5 0 5 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <GroupBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0" Header="Family List" BorderThickness="1">
            <TreeView BorderThickness="0" x:Name="FolderView" ItemsSource="{Binding Items}">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsThreeState="False" IsChecked="{Binding IsChecked, Mode=TwoWay}" Command="{Binding DataContext.ClickCommand
                                ,ElementName=Win }" 
                                CommandParameter="{Binding}"
                                Content="{Binding Name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </GroupBox>
            <WrapPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" >
            <Button HorizontalAlignment="Right" Command="{Binding ClickOkCommand}" Margin="5 5 5 0" Height="25"  Width="50" Content="Select" />
            <Button HorizontalAlignment="Right" Command="{Binding ClickZoomInCommand}" Margin="5 5 5 0" Height="25" Width="50" Content="Zoom" />
            <Button HorizontalAlignment="Right" Command="{Binding ClickCancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Margin="5 5 0 0" Height="25" Width="50" Content="Cancel" />
            </WrapPanel>
    </Grid>
</Window>
